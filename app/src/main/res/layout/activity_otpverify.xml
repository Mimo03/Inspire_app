<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/inspire"
    tools:context=".activites.LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/otpverify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OTP Verification"
                android:textAlignment="center"
                android:textColor="@color/purple_200"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/otpsub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Enter the OTP sent to"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColorHighlight="@color/cardview_dark_background"/>

            <TextView
                android:id="@+id/otpemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20102119@apsit.edu.in"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/purple_200"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Enter OTP"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                app:boxStrokeColor="@color/purple_200"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                android:selectAllOnFocus="true"
                app:errorEnabled="true"
                app:boxStrokeErrorColor="@color/purple_200"
                app:errorIconDrawable="@null"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/otpvalue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableTint="@color/purple_200"
                    android:drawableStart="@drawable/baseline_domain_verification_24"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColorHighlight="@color/cardview_dark_background" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/resendotp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resend OTP"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/purple_200"/>


            <Button
                android:id="@+id/verifyButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:color="@drawable/button_status"
                android:text="Verify"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>

