<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".activites.ChooseCategoryActivity">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startup"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:text="Startup"
        android:layout_gravity="center"
        android:backgroundTint="@color/purple_200"
        app:cornerRadius="15dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/internship"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:text="Internship"
        android:layout_gravity="center"
        android:backgroundTint="@color/purple_200"
        app:cornerRadius="15dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/hackathon"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:text="Hackathon"
        android:layout_gravity="center"
        android:backgroundTint="@color/purple_200"
        app:cornerRadius="15dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/achievement"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:text="Achievement"
        android:layout_gravity="center"
        android:backgroundTint="@color/purple_200"
        app:cornerRadius="15dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/eventwinner"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:text="Event Winners"
        android:layout_gravity="center"
        android:backgroundTint="@color/purple_200"
        app:cornerRadius="15dp"/>

</LinearLayout>