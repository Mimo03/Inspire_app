<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="match_parent"
    tools:context=".activites.PostActivity">
        <ImageView
            android:id="@+id/postimage"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>

        <TextView
            android:id="@+id/org"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JVSH Technology"
            android:textSize="18sp"
            android:textColor="?android:attr/textColor"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/categorybtn"
        android:layout_width="wrap_content"
        android:text="# startup"
        android:textAllCaps="false"
        app:cornerRadius="37dp"
        android:layout_marginStart="10dp"
        android:paddingVertical="10dp"
        android:backgroundTint="#BC62FF"
        android:paddingHorizontal="20dp"
        android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="?android:attr/textColor"
                    android:background="@drawable/ic_icon_material_favorite"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/ic_group_747"
                    android:backgroundTint="?android:attr/textColor"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="?android:attr/textColor"
                    android:background="@drawable/ic_icon_feather_send"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_alignParentRight="true"
                android:backgroundTint="?android:attr/textColor"
                android:background="@drawable/ic_icon_feather_share_2"
                android:layout_gravity="center"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/textview4"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20,253 likes"
            android:textStyle="bold"
            android:textColor="?android:attr/textColor"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/details"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
            android:textColor="?android:attr/textColor"
            android:textSize="15sp" />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#30707070"
        android:layout_marginVertical="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_header_container" />

    </LinearLayout>

