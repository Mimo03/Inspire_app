<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textSize="36sp"
                android:textColor="?android:attr/textColor"/>
            <TextView
                android:id="@+id/nametext"
                android:layout_marginHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erlich Bachman "
                android:textSize="36sp"
                android:textColor="?android:attr/textColor"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalscroll"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_marginVertical="10dp"
                android:id="@+id/hotpickscard"
                app:strokeWidth="3dp"
                app:strokeColor="@color/purple_500"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                android:clickable="true"
                app:cardElevation="11dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="#E5E5E5"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hot Picks"
                            android:textSize="20dp"
                            android:textColor="#333333"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/black"
                            android:background="@drawable/ic_baseline_navigate_next_24"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:text="Here you can see this weeks hot pick"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/purple_500"
                        android:text="Every Sunday"/>
                    <LinearLayout
                        android:id="@+id/hotpick_details"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/hotpick_img"
                            android:layout_width="wrap_content"
                            android:layout_height="250dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/image"/>
                        <TextView
                            android:id="@+id/hotpick_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:textColor="@color/black"
                            android:text="Every Sunday"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/categorybtn"
                            android:layout_width="wrap_content"
                            android:text="# startup"
                            android:textAllCaps="false"
                            app:cornerRadius="37dp"
                            android:paddingVertical="10dp"
                            android:backgroundTint="#BC62FF"
                            android:paddingHorizontal="20dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/hotpick_likes"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20,253 likes"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/hotpick_content"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <nl.dionsegijn.konfetti.xml.KonfettiView
                android:id="@+id/konfettiView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColor"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/postrecyclerview"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>